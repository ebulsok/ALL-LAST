    else if (id === 'p3') p3Checked = false;
    else if (id === 'p4') p4Checked = false;
  }

  function searchName(id) {
    const name = document.getElementById(id).value;
    if (name) {
      fetch('/log/new/search', {
          method: 'POST',
          headers: {
            'Content-type': 'application/json'
          },
          body: JSON.stringify({
            name
