<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Last</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</head>

<body>
  <div class="container px-4" style="margin-top: 80px; max-width: 600px;">
    <nav class="navbar bg-light fixed-top m-auto" style="max-width: 600px;">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">🀄 All Last</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="offcanvas offcanvas-end offc" style="width: 200px;" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
          <div class="offcanvas-header">
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">홈</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signup">회원가입</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signin">로그인</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/record">기록하기</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/log">마작 로그</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/score">나의 점수</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">로그아웃</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
    <h3 class="text-center">회원가입</h3>
    <form action="/signup" method="POST" onsubmit="return checkForm()" class="text-center">
      <div class="row mb-3">
        <label for="userID" class="col-4 col-form-label">아이디</label>
        <div class="col-6">
          <input type="text" class="form-control" id="userID" name="userID" required>
        </div>
        <input type="button" class="btn btn-secondary col-2 p-1" style="font-size: 10px;" onclick="checkID()" value="중복체크">
      </div>
      <div class="row mb-3">
        <label for="userPW" class="col-4 col-form-label">비밀번호</label>
        <div class="col-6">
          <input type="password" class="form-control" id="userPW" name="userPW" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="userName" class="col-4 col-form-label">닉네임</label>
        <div class="col-6">
          <input type="text" class="form-control" id="userName" name="userName" required>
        </div>
        <input type="button" class="btn btn-secondary col-2 p-1" style="font-size: 10px;" onclick="checkName()" value="중복체크">
      </div>

      <button type="submit" class="btn btn-primary">회원가입</button>
    </form>
  </div>
</body>

<script>
  let idChecked = false;
  let nameChecked = false;

  function checkID() {
    const data = document.getElementById('userID').value;
    if (data) {
      fetch('/signup/check', {
          method: 'POST',
          headers: {
            'Content-type': 'application/json'
          },
          body: JSON.stringify({
            category: 'user_id',
            data,
          }),
        }).then(res => res.json())
        .then(result => {
          console.log(result.result);
          if (result.result) {
            idChecked = true;
            alert('사용 가능한 아이디 입니다.');
          } else {
            idChecked = false;
            alert('중복된 아이디 입니다.')
          }
        })
    } else alert('입력해주세요.')
  }

  function checkName() {
    const data = document.getElementById('userName').value;
    fetch('/signup/check', {
        method: 'POST',
        headers: {
          'Content-type': 'application/json'
        },
        body: JSON.stringify({
          category: 'user_name',
          data,
        }),
      }).then(res => res.json())
      .then(result => {
        console.log(result.result);
        if (result.result) {
          nameChecked = true;
          alert('사용 가능한 닉네임 입니다.');
        } else {
          nameChecked = false;
          alert('중복된 닉네임 입니다.')
        }
      })
  }

  function checkForm() {
    if (!idChecked) {
      alert('아이디 중복체크가 필요합니다.');
      return false;
    }
    if (!nameChecked) {
      alert('닉네임 중복체크가 필요합니다.');
      return false;
    }
    return true;
  }
</script>

</html>