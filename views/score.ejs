<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Last</title>

  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/26192e937e.js" crossorigin="anonymous"></script>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

  <!-- css -->
  <link rel="stylesheet" href="/css/font.css">
  <style>
    .page-item.active>a {
      background-color: #eee;
    }
  </style>
</head>

<body>
  <div class="container px-4" style="margin-top: 90px; max-width: 600px;">
    <nav class="navbar bg-white border-bottom border-dark fixed-top m-auto" style="max-width: 600px;">
      <div class="container-fluid">
        <a class="navbar-brand" href="/?page=1">🀄 오라스</a>
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="offcanvas offcanvas-end offc" tabindex="-1" id="offcanvasNavbar">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasNavbarLabel"><%= name %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
          </div>
          <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
              <li class="nav-item">
                <a class="nav-link" href="/?page=1">홈</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/log/new">기록하기</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/log?page=1">마작 로그</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/score?page=1">나의 점수</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/log/star?page=1">즐겨찾기</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signin/signout">로그아웃</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
    <h3 class="text-center">나의 점수</h3>

    <% if(scores.length > 0) { %>
    <% for(let i = 0; i < scores.length; i++) { %>
    <table class="table caption-top table-borderless text-center my-4">
      <caption class="">
        <span><%= scores[i].date %>, <%= scores[i].place %></span>
      </caption>
      <thead>
        <tr class="text-black-50">
          <th scope="col">#</th>
          <th scope="col">점수</th>
          <th scope="col">우마</th>
        </tr>
      </thead>
      <tbody>
        <% for(let j = 0; j < scores[i].games.length; j++) { %>
        <tr>
          <td class="w-25"><%= scores[i].games[j].rank %>위</td>
          <td class="w-50"><%= scores[i].games[j].score %></td>
          <td class="w-50"><%= scores[i].games[j].total %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <% } %>
    <% } %>
    <nav>
      <ul class="pagination pagination-sm justify-content-center mt-5">
        <% for(let i = 0; i < pageNum; i++) { %>
        <li class="page-item" id="page<%= i+1 %>"><a class="page-link text-black border-dark" href="/score?page=<%=i+1 %>"><%= i+1 %></a></li>
        <% } %>
      </ul>
    </nav>
  </div>
</body>

<script>
  const num = 'page' + new URLSearchParams(location.search).get('page');
  document.getElementById(num).classList.add('active')
</script>

</html>